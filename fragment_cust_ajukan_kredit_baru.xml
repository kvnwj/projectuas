<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustAjukanKreditBaru"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txtFormPengajuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulir Pengajuan"
        android:background="#5EC639"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        style="@style/CustomerListTitleStyle" />

    <TextView
        android:id="@+id/txtFormPengajauan2"
        style="@style/CustomerListSubTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Silakan isi formulir di bawah ini"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtNamaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Nama Produk" />

    <Spinner
        android:id="@+id/spinnerNamaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/txtHargaOTR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Harga OTR" />

    <Spinner
        android:id="@+id/spinnerHargaOTR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/edtUangMuka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Uang Muka" />

    <TextView
        android:id="@+id/txtTenor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Tenor" />

    <Spinner
        android:id="@+id/spinnerTenor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnSubmit"
            style="@style/generalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#5EC639"
            android:text="SUBMIT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>